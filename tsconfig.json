{
  "compilerOptions": {
    "jsx": "react-native",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictNullChecks": true,
    "types": [ "jest", "node" ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ESNext",
    "emitDeclarationOnly": true,
    "typeRoots": ["./src/@types/*", "./node_modules/@types"],
  },
  "exclude": [
    "./dist" // exclude outDir
  ]
}